<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/lose"
    android:orientation="horizontal"
    android:padding="8dp"
    app:cardBackgroundColor="?attr/colorSecondary"
    app:cardCornerRadius="@dimen/cornerRadius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/history.game.id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="none"
            android:ems="2"
            android:maxLines="1"
            android:text="#aidnffffaww" />

        <TextView
            android:id="@+id/history.game.name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_toRightOf="@id/history.game.id"
            android:drawableLeft="@drawable/person_20dp"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:text="ThatUsualGuyfffffffffffff" />

        <TextView
            android:id="@+id/games.waiting.item.elo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/history.game.name"
            android:maxEms="4"
            android:text="(100)" />


        <TextView

            android:id="@+id/games.waiting.item.join"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"

            android:text="+100" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>